{
  "manifest_version": "0.2",
  "name": "seqgpt-local-mcp",
  "display_name": "SeqGPT",
  "version": "0.0.1",
  "description": "Genomic processing and analysis",
  "author": {
    "name": "Jesse Eaton",
    "email": "jesseantoneaton@gmail.com"
  },
  "homepage": "https://seqgpt.ai/",
  "icon": "icon.png",
  "server": {
    "type": "python",
    "entry_point": "server/main.py",
    "mcp_config": {
      "command": "${__dirname}/.venv/bin/python",
      "args": ["-I", "-s", "${__dirname}/server/main.py"],
      "env": {
        "PYTHONPATH": "${__dirname}/server/lib"
      }
    }
  },
  "license": "MIT"
}
